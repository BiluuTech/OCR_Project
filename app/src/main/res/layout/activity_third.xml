<!--        android:text="Translate" />-->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/language"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Board Text Translator"
                android:textColor="#469CC1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:layout_marginLeft="5dp"
                />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/translationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:fontFamily="@font/aclonica"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:textColor="#fff"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/translatedTextCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#469CC1"
            >
            <TextView
                android:id="@+id/translatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:textColor="#fff"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/selectLanguageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/aclonica"
        android:text="Select Language"
        android:textColor="#fff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/urduLangBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/aclonica"
        android:text="Urdu"
        android:textColor="#fff" />

    <Button
        android:id="@+id/chineseLangBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/aclonica"
        android:text="Chinese"
        android:textColor="#fff" />

    <Button
        android:id="@+id/chineseSimplifiedLangBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/aclonica"
        android:text="Chinese Simplified"
        android:textColor="#fff" />

    <Button
        android:id="@+id/chineseTraditionalLangBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/aclonica"
        android:text="Chinese Traditional"
        android:textColor="#fff" />

    <Button
        android:id="@+id/againTranslationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/aclonica"
        android:text="Translate Again"
        android:textColor="#fff" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/voice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/mic2"
        android:backgroundTint="#469CC1"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

</LinearLayout>